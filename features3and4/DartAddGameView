package src.com.julia.dart.views;
import src.com.julia.dart.model.DartProduct;
import src.com.julia.dart.Utilities;
import src.com.julia.dart.model.DartProductType;

import java.util.UUID;

public class DartAddGameView {
    public static DartProduct getProductData(){
        String title, genre;
        Double dailyRentFee;
        UUID id;

        System.out.println("Please enter game name");
        title = Utilities.stringInput();
        System.out.println("Please enter game genre");
        genre = Utilities.stringInput();
        System.out.println("Please enter the daily rent fee");
        dailyRentFee = Utilities.doubleInput();
        id = UUID.randomUUID();

        DartProduct newGame = new DartProduct(id, title, genre, dailyRentFee);
        return newGame;
    }
    public static void renderSuccess() {
        System.out.println("Successfully registered a game!");
    }
}
