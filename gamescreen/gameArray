package gamescreen;
import java.util.Arrays;
import java.util.Scanner;
public class gameArray {
    Scanner sc = new Scanner(System.in);
    private int gamesArray[][];
    private int size; //current size of the array for IDS
    private int size2; //current size of the array for game names. i'm gonna add more, but this is just a demo class
    private int capacity; //total capacity of the array

    public gameArray(){ // default constructor to initialize the array and values
        gamesArray = new int[2][2]; //it's not showing what the arrays actually contain.pls help.
        size = 0;
        size2 = 0;
        capacity = 2;
    }

    public void addGames(int ID, String gamename, String genre, double dailyRent, String status) { //adds a game to the array
        if (size == capacity) {
            ensureCapacity(2);
        }
        for (int i = size - 1; i >= ID; i--) {
            gamesArray[i + 1][i + 1] = gamesArray[i][i];

        }
        gamesArray[size][size2] = ID;
        size++;
    }
    public void removeGame(int ID){ //removes a game from the array
        if(ID>=size || ID<0){
            System.out.println("No such ID exists!");
        }else{
            for(int i=ID;i<size-1;i++){
                gamesArray[i][i] = gamesArray[i+1][i+1];
            }
            gamesArray[size-1][size-1]=0;
            size--;
            System.out.println("Game removed!");
        }
    }
    public void ensureCapacity(int minCapacity){
        int temp[] = new int[capacity*minCapacity];
        for (int i=0; i < capacity; i++){
            temp[i] = gamesArray[i][i];
        }
        capacity = capacity * minCapacity; //mainly for space conversion.
    }
    public void printElements(){ //its supposed to show what the arrays contain ENTIRELY. it's not showing what the arrays actually contain.pls help.
        System.out.println("The game ID's present are: " + Arrays.toString(gamesArray));
    }
    public int size(){
        return size;
    }
    public void trimToSize() { //removes all the empty places in the array so a bunch of zeroes and nulls dont show up.
        int temp[] = new int[size];
        for (int i = 0; i < size; i++) {
            temp[i] = gamesArray[i][i];
        }
        capacity = gamesArray.length;
    }

    }
